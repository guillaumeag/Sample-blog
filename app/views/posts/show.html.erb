<ul class="breadcrumb">
  <li>Blog</li>
  <li><%= link_to 'Posts', posts_path %></li>
  <li class="active"><%= @post.title %></li>
</ul>

<article>
  <header>
    <h2><%= @post.title %></h2>
  </header>
  <section class="content">
    <p>
      <%= raw @post.content %>
    </p>
  </section>
  <section id="comments" class="comments">
    <h3>Comments</h3>
    <%= render @post.comments %>
  </section>
  <section class="new-comment">
    <%= render "comments/new", post: @post %>
  </section>
</article>